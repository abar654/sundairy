<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="basic_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/button_text</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">@dimen/button_padding_x</item>
        <item name="android:paddingRight">@dimen/button_padding_x</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_bottom</item>
    </style>

    <style name="basic_text">
        <item name="android:fontFamily">@font/bod</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="button_text">
        <item name="android:fontFamily">@font/bod</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
